generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Domain {
  id        String   @id @default(cuid())
  host      String   @unique
  isBlocked Boolean  @default(false)
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creators Creator[]
  feeds    Feed[]
}

model Creator {
  id            String   @id @default(cuid())
  name          String
  description   String?
  primaryDomain String?
  domainId      String?

  domain Domain? @relation(fields: [domainId], references: [id])

  feeds Feed[]
  items Item[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feed {
  id          String   @id @default(cuid())
  creatorId   String
  domainId    String?
  url         String   @unique
  type        String   // rss|atom|json|sitemap
  enabled     Boolean  @default(true)
  lastFetched DateTime?
  etag        String?
  lastMod     String?

  creator Creator @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  domain  Domain?  @relation(fields: [domainId], references: [id])

  ingestRuns IngestRun[]
  items      Item[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id           String   @id @default(cuid())
  creatorId    String
  feedId       String?
  title        String
  canonicalUrl String   @unique
  url          String
  excerpt      String?
  contentText  String?
  publishedAt  DateTime?
  fetchedAt    DateTime @default(now())

  creator Creator @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  feed    Feed?    @relation(fields: [feedId], references: [id])

  reports       Report[]
  verifications Verification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Verification {
  id        String   @id @default(cuid())
  itemId    String?
  creatorId String?
  status    String   // pending|approved|rejected
  notes     String?
  decidedBy String?

  item    Item?    @relation(fields: [itemId], references: [id], onDelete: Cascade)
  creator Creator? @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DomainBlocklist {
  id        String   @id @default(cuid())
  host      String   @unique
  reason    String?
  createdAt DateTime @default(now())
  createdBy String?
}

model KeywordBlocklist {
  id        String   @id @default(cuid())
  keyword   String   @unique
  reason    String?
  createdAt DateTime @default(now())
  createdBy String?
}

model Report {
  id          String   @id @default(cuid())
  itemId      String
  reporterId  String?
  reason      String
  details     String?
  status      String   @default("open") // open|closed

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ModerationAction {
  id         String   @id @default(cuid())
  actorId    String?
  targetType String
  targetId   String
  action     String
  reason     String?

  createdAt DateTime @default(now())

  auditLogs AuditLog[]
}

model AuditLog {
  id                 String   @id @default(cuid())
  actorId            String?
  action             String
  entityType         String
  entityId           String
  metadataJson       String?
  moderationActionId String?

  moderationAction ModerationAction? @relation(fields: [moderationActionId], references: [id])

  createdAt DateTime @default(now())
}

model IngestRun {
  id        String   @id @default(cuid())
  feedId    String
  status    String   // ok|error
  startedAt DateTime @default(now())
  endedAt   DateTime?
  error     String?
  statsJson String?

  feed Feed @relation(fields: [feedId], references: [id], onDelete: Cascade)
}
